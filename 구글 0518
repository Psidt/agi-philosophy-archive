// Function to set the active language
function setLang(lang) {
  // Remove active class from all language divs
  document.querySelectorAll('.lang').forEach(el => {
    el.classList.remove('active');
    el.style.display = 'none'; // Hide language div
  });

  // Remove active and pressed state from all language buttons
  document.querySelectorAll('#lang-switcher button').forEach(btn => {
    btn.classList.remove('active');
    btn.setAttribute('aria-pressed', 'false');
  });

  // Add active class to the selected language div and show it
  const activeLangDiv = document.querySelector('.lang-' + lang);
  if (activeLangDiv) {
    activeLangDiv.classList.add('active');
    activeLangDiv.style.display = 'block'; // Show the active language div
  }

  // Add active and pressed state to the clicked button
  const activeLangButton = document.getElementById('btn-' + lang);
  if (activeLangButton) {
    activeLangButton.classList.add('active');
    activeLangButton.setAttribute('aria-pressed', 'true');
  }

  // Update the lang attribute on the html element
  document.documentElement.lang = lang;

  // Call updateNavActiveState after language switch to set initial nav highlighting for the new language
  updateNavActiveState();

  // Update URL hash based on current language and scroll position
  // Find the currently active section
  let currentSectionId = null;
  const activeLangSections = document.querySelectorAll(`.lang.active main section`);
   const stickyHeaderTotalHeight = (document.getElementById('lang-switcher') ? document.getElementById('lang-switcher').offsetHeight : 0) + (document.querySelector('nav') ? document.querySelector('nav').offsetHeight : 0);
  const activationOffset = 80;

  for (let i = activeLangSections.length - 1; i >= 0; i--) {
      const section = activeLangSections[i];
      const rect = section.getBoundingClientRect();
      if (rect.top <= stickyHeaderTotalHeight + activationOffset) {
          currentSectionId = section.id;
          break;
      }
  }

  // If a section is identified, update the hash
  if (currentSectionId) {
      if (history.replaceState) {
          // Ensure the hash includes the language suffix for correct link targeting
          history.replaceState(null, null, `#${currentSectionId}`);
      } else {
          window.location.hash = `#${currentSectionId}`;
      }
  } else if (window.scrollY === 0) {
       // If at the very top and no section is active, remove hash
       if (history.replaceState) {
           history.replaceState(null, null, window.location.pathname + window.location.search);
       } else {
           window.location.hash = '';
       }
  }
}

// Function to update active state in nav based on scroll position
function updateNavActiveState() {
    const activeLangDiv = document.querySelector('.lang.active');
    if (!activeLangDiv) return; // Exit if no language div is active

    // Select sections only within the currently active language div's main content
    const sections = activeLangDiv.querySelectorAll('main section');
    const navLinks = document.querySelector('nav ol').querySelectorAll('a'); // Get all nav links (assuming one nav list serves both languages)

    navLinks.forEach(link => link.classList.remove('active')); // Remove active from all nav links first

    // Get the height of sticky elements (lang switcher + nav)
    const langSwitcherHeight = document.getElementById('lang-switcher') ? document.getElementById('lang-switcher').offsetHeight : 0;
    const navHeight = document.querySelector('nav') ? document.querySelector('nav').offsetHeight : 0;
    const stickyHeaderTotalHeight = langSwitcherHeight + navHeight;

    const activationOffset = 80; // Pixels below the sticky header to trigger active state

    // Find the section that is currently at the top of the viewport, or the first one slightly below the sticky header
    let currentSectionId = null;

    // Iterate backwards to find the section whose top is closest to or just above the activation line
    for (let i = sections.length - 1; i >= 0; i--) {
        const section = sections[i];
        // Use getBoundingClientRect() relative to the viewport
        const rect = section.getBoundingClientRect();

        // Check if the section's top is within the activation threshold
        if (rect.top <= stickyHeaderTotalHeight + activationOffset) {
            currentSectionId = section.id;
            break; // Found the section at or above the activation line
        }
    }

    // If no section is found (e.g., at the very top of the page before the first section),
    // check if scroll position is near the top to activate the first link.
    if (!currentSectionId && sections.length > 0) {
         // Use a slightly larger buffer for the very top, and also check if the first section is actually on screen
         const firstSectionRect = sections[0].getBoundingClientRect();
         if (window.scrollY === 0 || (firstSectionRect.top >= stickyHeaderTotalHeight && firstSectionRect.top < window.innerHeight * 0.5)) {
              currentSectionId = sections[0].id; // Activate first section link if at top or near top
         }
    }


    // Activate the corresponding link in the navigation
    if (currentSectionId) {
        // Find the link that matches the section ID, regardless of language prefix
        const linkForActiveSection = document.querySelector(`nav ol a[href="#${currentSectionId}"]`);
        if (linkForActiveSection) {
            linkForActiveSection.classList.add('active');
        }
    }
    // Optional: Add a debounce/throttle for performance on scroll events
}


// Initial setup on page load
document.addEventListener('DOMContentLoaded', () => {
    // Determine initial language from URL hash or default
    const hash = window.location.hash;
    let initialLang = 'en'; // Default to English

    if (hash && hash.startsWith('#') && hash.length > 1) {
        const sectionIdFromHash = hash.substring(1);
         // Check if the hash corresponds to a section ID in either language
        if (document.getElementById(sectionIdFromHash)) {
             // Extract language from the hash ID itself (e.g., 'why-ko' -> 'ko')
             const parts = sectionIdFromHash.split('-');
             if (parts.length > 1) {
                 const langSuffix = parts[parts.length - 1];
                 if (langSuffix === 'ko' || langSuffix === 'en') {
                     initialLang = langSuffix;
                 }
             }
        }
    }

    // Set initial language based on the detected/default language
    // setLang will also handle initial nav highlighting and hash update
    setLang(initialLang);

    // Add scroll listener to update nav active state
    window.addEventListener('scroll', updateNavActiveState);

    // Add click listeners to nav links for smooth scroll and hash update
    document.querySelectorAll('nav a').forEach(link => {
        link.addEventListener('click', (event) => {
            event.preventDefault(); // Prevent default hash link jump

            // Get the target section ID (including language suffix)
            const targetIdWithLang = event.target.getAttribute('href').substring(1);
            const targetSection = document.getElementById(targetIdWithLang);

            if (targetSection) {
                 // Use smooth scroll
                 targetSection.scrollIntoView({ behavior: 'smooth' });

                 // Update the URL hash after scrolling
                 // Using setTimeout to allow scroll-to-view to start
                 setTimeout(() => {
                     if (history.replaceState) {
                         history.replaceState(null, null, `#${targetSection.id}`);
                     } else {
                         window.location.hash = `#${targetSection.id}`;
                     }
                     // Manually trigger nav update after hash is set
                     updateNavActiveState();
                 }, 700); // Adjust delay if needed
            }
        });
    });

    // Handle initial load with hash in URL after language is set and DOM is ready
    // setLang handles the language switch and initial hash/nav.
    // A final check after potential smooth scroll from initial hash might be needed.
     if (hash && hash.startsWith('#') && hash.length > 1) {
         window.addEventListener('load', () => { // Use load to ensure everything is rendered
             const sectionId = hash.substring(1);
             const targetSection = document.getElementById(sectionId);
             if (targetSection) {
                  // Re-scroll if necessary (sometimes initial scroll isn't perfect)
                  targetSection.scrollIntoView(); // Use instant scroll here to avoid double animation
                  // Update nav state after scrolling
                  updateNavActiveState();
             }
         });
     } else {
         // If no hash, ensure nav active state is set for the top section on load
         window.addEventListener('load', () => {
             updateNavActiveState();
         });
     }
});

// Ensure nav active state is correct on orientation change or resize
window.addEventListener('resize', updateNavActiveState);
window.addEventListener('orientationchange', updateNavActiveState);

</script>
</body>
